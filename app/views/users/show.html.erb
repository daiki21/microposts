<h1>
    <%= gravatar_for @user %>
    <%= @user.name %>
</h1>

<div class="email" style="text-align:center;">
    メールアドレス：
    <%= @user.email %>
</div>

<div class="place" style="text-align:center;">
    場所：
    <%= @user.place %>
</div>

<div class="bio" style="text-align:center;">
    プロフィール：
    <%= @user.bio %>
</div>

<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
  <div class="col-md-8">
    <%= render 'follow_form' if logged_in? %>
    <% if @user.microposts.any? %>
      <h3>Microposts (<%= @user.microposts.count %>)</h3>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
    <% end %>
  </div>
</div>
