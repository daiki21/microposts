<h1>Edit</h1>
<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <%= form_for(@user) do |f| %>
        <%= render 'shared/error_messages', object: f.object %>

          <%= f.label :name, "名前", class: "control-label" %>
          <%= f.text_field :name, class: 'form-control' %>
          
          <%= f.label :email, "メールアドレス", class: 'control-label' %>
          <%= f.text_field :email, class: 'form-control' %>
      
          <%= f.label :password, "パスワード", class: 'control-label' %>
          <%= f.password_field :password, class: 'form-control' %>

          <%= f.label :password_confirmation, "パスワード確認", class: 'control-label' %>
          <%= f.password_field :password_confirmation, class: 'form-control' %>

          <%= f.label :place, "場所", class: "control-label" %>
          <%= f.text_field :place, class: 'form-control' %>

          <%= f.label :bio, "プロフィール", class: "control-label" %>
          <%= f.text_area :bio, class: 'form-control' %>
          
          <%= f.submit "プロフィール変更", class: "btn btn-large btn-primary" %>
        <% end %>
    </div>
</div>